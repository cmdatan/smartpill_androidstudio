<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:backgroundTint="@color/colorBackground"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/colorBackground"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:shadowColor="@color/colorWhite"
            app:cornerRadius="52dp"
            app:icon="@drawable/baseline_arrow_back_black_18dp"
            app:iconPadding="0dp"
            app:iconSize="30dp"
            app:iconTint="#000000"
            app:rippleColor="#C1D1D1D1" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="70dp"
            android:elevation="@dimen/appIntroBottomBarHeight"
            android:fontFamily="@font/product_sans_regular"
            android:gravity="center"
            android:text="Add Schedule"
            android:textColor="#000000"
            android:textSize="25sp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="Medicine:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/medicines_spinner"
                    android:layout_width="@android:dimen/thumbnail_height"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="Quantity:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:inputType="number" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/product_sans_regular"
                android:text="Time:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TimePicker
                android:id="@+id/timePicker1"
                style="@android:style/Widget.Material.TimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:amPmTextColor="@color/colorPrimary"
                android:numbersInnerTextColor="@color/colorPrimary"
                android:numbersTextColor="#000000"
                android:scrollbarStyle="outsideOverlay"
                android:timePickerMode="spinner" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/product_sans_regular"
                android:text="Repeat:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp">

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/sun"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="S"
                    android:textOn="S"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/mon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="M"
                    android:textOn="M"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/tue"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="T"
                    android:textOn="T"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/wed"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="W"
                    android:textOn="W"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />
                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/thurs"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="T"
                    android:textOn="T"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />
                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/fri"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="F"
                    android:textOn="F"
                    android:layout_marginEnd="10dp"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />
                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/sat"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:textOff="S"
                    android:textOn="S"
                    app:checkedColor="@color/colorPrimary"
                    app:uncheckedColor="@color/colorPrimary"
                    app:radius="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/product_sans_regular"
                    android:text="For how long:"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/duration"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:text="Save" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>